
## HYPER == SHIFT + CMD + ALT + OPTION
## MEH == SHIFT + CMD + ALT + OPTION

# if you're having troubles finding key codes for a key just type skhd --observe
# in a terminal and type a key.

### Window Mnager ###
meh - a : yabai -m window --focus mouse
hyper - a : yabai -m window --focus mouse

meh - s : yabai -m window --toggle float
hyper - s : yabai -m window --toggle float

meh - d : skhd -k "ctrl + alt + cmd - h"
hyper - d : skhd -k "ctrl + alt + cmd - h"

## toggle window fullscreen zoom-fullscreen
meh - f : yabai -m window --toggle zoom-fullscreen
hyper - f : yabai -m window --toggle zoom-fullscreen

meh - g : skhd -k "ctrl + alt + cmd - g"
hyper - g : skhd -k "ctrl + alt + cmd - g"

meh - r : yabai -m space --rotate 90
hyper - r : yabai -m space --rotate 90

meh - x : yabai -m space --mirror x-axis
meh - y : yabai -m space --mirror y-axis
hyper - x : yabai -m space --mirror x-axis
hyper - y : yabai -m space --mirror y-axis

meh - backspace : yabai -m window --close
hyper - backspace : yabai -m window --close

# 0x21 == "[" 0x!E == "]"
meh - 0x21 : skhd -k "ctrl + alt + cmd - 0x21"
meh - 0x1E : skhd -k "ctrl + alt + cmd - 0x1E"
hyper - 0x21 : skhd -k "ctrl + alt + cmd - 0x21"
hyper - 0x1E : skhd -k "ctrl + alt + cmd - 0x1E"

meh - 1 : skhd -k "ctrl + alt + cmd - 1"
meh - 2 : skhd -k "ctrl + alt + cmd - 2"
meh - 3 : skhd -k "ctrl + alt + cmd - 3"
meh - 4 : skhd -k "ctrl + alt + cmd - 4"
meh - 5 : skhd -k "ctrl + alt + cmd - 5"
meh - 6 : skhd -k "ctrl + alt + cmd - 6"

cmd - 1 : yabai -m window --space 1 
cmd - 2 : yabai -m window --space 2 
cmd - 3 : yabai -m window --space 3 
cmd - 4 : yabai -m window --space 4 
cmd - 5 : yabai -m window --space 5 
cmd - 6 : yabai -m window --space 6 

hyper - 1 : yabai -m window --space 1 && skhd -k "ctrl + alt + cmd - 1"
hyper - 2 : yabai -m window --space 2 && skhd -k "ctrl + alt + cmd - 2"
hyper - 3 : yabai -m window --space 3 && skhd -k "ctrl + alt + cmd - 3"
hyper - 4 : yabai -m window --space 4 && skhd -k "ctrl + alt + cmd - 4"
hyper - 5 : yabai -m window --space 5 && skhd -k "ctrl + alt + cmd - 5"
hyper - 6 : yabai -m window --space 6 && skhd -k "ctrl + alt + cmd - 6"

meh - h : yabai -m window --focus west
meh - j : yabai -m window --focus north
meh - k : yabai -m window --focus south
meh - l : yabai -m window --focus east

hyper - h : yabai -m window --swap west
hyper - j : yabai -m window --swap north
hyper - k : yabai -m window --swap south
hyper - l : yabai -m window --swap east

meh - left : yabai -m window --focus west
meh - up : yabai -m window --focus north
meh - down : yabai -m window --focus south
meh - right : yabai -m window --focus east

hyper - left : yabai -m window --swap west
hyper - up : yabai -m window --swap north
hyper - down : yabai -m window --swap south
hyper - right : yabai -m window --swap east
 
### Applications ###
alt - space : open -n -a /opt/homebrew/bin/kitty

